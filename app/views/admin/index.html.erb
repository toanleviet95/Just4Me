<div class="box col-md-12">
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-user"></i> Quản lý bài viết</h2>
        </div>
        <div class="box-content">
            <a style="margin-bottom: 5px" class="btn btn-xs btn-success" href="/admin/new">
                <i class="glyphicon glyphicon-plus icon-white"></i>
                Thêm
            </a>
            <table id="tblBaiViet" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th>Hình ảnh</th>
                    <th>Thể loại</th>
                    <th>Tác giả</th>
                    <th>Ngày đăng</th>
                    <th>Tùy chỉnh</th>
                </tr>
                </thead>
                <tbody>
                <% @bai_viets.each do |bai_viet| %>
                <tr>
                	<td><%= bai_viet.id %></td>
                    <td><%= bai_viet.tieu_de %></td>
                    <td><%= image_tag bai_viet.hinh_anh, class: "img-responsive height_auto" %></td>
                    <td><%= bai_viet.the_loai.ten_the_loai %></td>
                    <td><%= bai_viet.tai_khoan.username %></td>
                    <td><%= bai_viet.ngay_dang.strftime("%m/%d/%Y") %></td>
                    <td>
                        <a class="btn btn-xs btn-info" href="/admin/edit/<%= bai_viet.id %>">
                            <i class="glyphicon glyphicon-edit icon-white"></i>
                            Cập nhật
                        </a>
                        <a class="btn btn-xs btn-danger" onclick="hien_thi_xoa(<%= bai_viet.id %>)">
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            Xóa
                        </a>
                    </td>
                </tr>
                <div class="modal fade" id="XoaModal_<%= bai_viet.id %>" tabindex="-1" role="dialog" aria-labelledby="XoaModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">×</button>
                                <h3>Hệ thống</h3>
                            </div>
                            <div class="modal-body">
                                <p>Bạn có muốn xóa thông tin này ?</p>
                            </div>
                            <div class="modal-footer">
                                <a id="btnXoa_<%= bai_viet.id %>" href="/bai-viet/delete/<%= bai_viet.id %>" class="btn btn-info">Đồng ý</a>
                                <a href="" class="btn btn-danger" data-dismiss="modal">Đóng</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    function hien_thi_xoa(id){
        $('#XoaModal_'+id).modal('show');
    };
</script>
