<!-- single -->
	<div class="content sing">
	<div class="container">
		<div class="content-text cnt-txt">	
			<div class="title">
				<div class="some-title">
					<h3><%= @bai_viet.tieu_de %></h3>
				</div>
				<div class="john">
					<p><a href=""><%= @bai_viet.tai_khoan.username %></a><span><%= @bai_viet.ngay_dang.strftime("%m/%d/%Y") %></span></p>
				</div>
				<div class="clearfix"> </div>
				<div class="tilte-grid">
					<%= image_tag @bai_viet.hinh_anh, class: "img-responsive height_auto" %>
					<p class="vel">
						<%= @bai_viet.tom_tat %>
					</p>
					<p class="Sed">
						<%= markdown(@bai_viet.noi_dung) %>
					</p> 
				</div>
				<div class="related-posts">
					<h3>Bài viết liên quan</h3>
					<% @bai_viet_lien_quans.each do |bai_viet_lien_quan| %>
					<div class="related-posts-grids">
						<div class="related-posts-grid">
							<a href="/bai-viet/<%= bai_viet_lien_quan.id %>"><%= image_tag bai_viet_lien_quan.hinh_anh, class: "img-responsive" %></a>
							<h4><a href="/bai-viet/<%= bai_viet_lien_quan.id %>"><%= bai_viet_lien_quan.tieu_de %></a></h4>
						</div>
						<div class="clearfix"> </div>
					</div>
					<% end %>
				</div>
			</div>
			<%= render "shared/sidebar" %>
			<div class="clearfix"> </div>
			<div class="comments">
					<h4>Nhận xét (<%= @nhan_xets.count %>)</h4>
					<% @nhan_xets.each do |nhan_xet| %>
					<div class="comments-info">
						<div class="cmnt-icon-left">
							<a href="#"><%= image_tag 'icon3.png', class: "img-responsive" %></a>
						</div>
						<div class="cmnt-icon-right">
							<p><%= nhan_xet.ngay_tao.strftime("%m/%d/%Y") %></p>
							<p><a href=""><%= nhan_xet.ten %></a></p>
							<p class="cmmnt">
								<%= markdown(nhan_xet.noi_dung) %>
							</p>
						</div>
						<div class="clearfix"> </div>
					</div>
					<% end %>
				</div>
			<div class="consequat">
				<h4>Nhận xét của bạn</h4>
				<form method="post" action="/nhan-xet/create/<%= @bai_viet.id %>">
					<input type="text" name="HoTen" value="Họ tên..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Họ tên...';}" required>
					<textarea type="text" name="NoiDung"  onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Bình luận của bạn...';}" required>Bình luận của bạn...</textarea>
					<input type="submit" value="Đăng bình luận" >
				</form>
			</div>
		</div>
	</div>
	</div>
<!-- single -->